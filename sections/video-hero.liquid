<div class="main-video-container">
  <div class="relative w-full overflow-hidden">
    {% if section.settings.bg_type == 'image' %}
      <div class="banner_img">
        {% if section.settings.desktop_img != blank %}
          {{
            section.settings.desktop_img
            | image_url: width: section.settings.desktop_img.width
            | image_tag: loading: 'lazy', class: 'desktop_img w-full h-auto object-cover'
          }}
        {% endif %}
        {% if section.settings.mobile_img != blank %}
          {{
            section.settings.mobile_img
            | image_url: width: section.settings.mobile_img.width
            | image_tag: loading: 'lazy', class: 'mobile_img w-full h-auto object-cover'
          }}
        {% endif %}
      </div>
    {% else %}
      <div class="banner_video">
        {% if section.settings.desktop_video != blank %}
          {{
            section.settings.desktop_video
            | video_tag: autoplay: true, loop: true, muted: true, class: 'desktop_video w-full h-auto object-cover'
          }}
        {% endif %}
        {% if section.settings.mobile_video != blank %}
          {{
            section.settings.mobile_video
            | video_tag: autoplay: true, loop: true, muted: true, class: 'mobile_video w-full h-auto object-cover'
          }}
        {% endif %}
      </div>
    {% endif %}

    <div class="absolute top-[46%] left-1/2 -translate-x-1/2 -translate-y-1/2 text-center text-white z-10 w-full max-w-[590px] p-5">
      <div>
        <h3
          class="text-[36px] font-bold leading-[1.25] tracking-[0.15em] uppercase"
          style="color: {{ section.settings.hero_content_text_color }}"
        >
          {{ section.settings.title }}
        </h3>
        <p
          class="text-[18px] font-semibold leading-[1.7] tracking-[0.05em] mt-4"
          style="color: {{ section.settings.hero_content_text_color }}"
        >
          {{ section.settings.subtitle }}
        </p>
        <a
          href="{{ section.settings.button_link }}"
          class="inline-block mt-6 px-9 py-5 text-black no-underline font-bold text-[14px] uppercase rounded-[5px] border-none transition-all duration-300 ease-in-out hover:opacity-80"
          style="background: {{ section.settings.hero_content_button_bg }}"
        >
          {{- section.settings.button_text -}}
        </a>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.tailwindcss.com"></script>

<style>
  @media (max-width: 768px) {
    .banner_title {
      font-size: 2rem;
    }

    .banner_subtitle {
      font-size: 1rem;
    }

    .banner_button {
      font-size: 0.8rem;
      padding: 10px 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Video Hero",
  "settings": [
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "select",
      "id": "bg_type",
      "label": "Background Type",
      "options": [
        { "value": "image", "label": "Image" },
        { "value": "video", "label": "Video" }
      ],
      "default": "video"
    },
    {
      "type": "image_picker",
      "id": "desktop_img",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_img",
      "label": "Mobile Image"
    },
    {
      "type": "video",
      "id": "desktop_video",
      "label": "Desktop Video"
    },
    {
      "type": "video",
      "id": "mobile_video",
      "label": "Mobile Video"
    },

    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "FROM THE GROUND UP"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Start your journey on the right foot. FIGS | NEW BALANCE 997H is BACK, now in Mariner."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop FIGS | NEW BALANCE"
    },

    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "hero_content_text_color",
      "label": "Hero Content Text Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "hero_content_button_bg",
      "label": "Hero Content Button Color",
      "default": "#fff"
    }
  ],
  "presets": [
    {
      "name": "Video Hero"
    }
  ]
}
{% endschema %}
