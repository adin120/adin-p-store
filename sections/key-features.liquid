<div></div>
{% schema %}
{
  "name": "Key Features",
  "max_blocks": 8,
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Key Features",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}

<script src="https://cdn.tailwindcss.com"></script>

<div class="key-features py-[60px] bg-[#f5f5f5]">
  <div class="features-grid grid grid-cols-4 gap-0 max-w-[1200px] mx-auto relative">
    {% for block in section.blocks %}
      <div class="feature-item text-center p-5 relative" {{ block.shopify_attributes }}>
        {% if block.settings.icon %}
          <div class="feature-icon w-15 h-12 mx-auto mb-[15px] flex justify-center">
            <img
              class="object-contain w-[40px] h-[40px]"
              src="{{ block.settings.icon | img_url: '' }}"
              alt="{{ block.settings.title }}"
              loading="lazy"
              width=""
              height=""
            >
          </div>
        {% endif %}
        <h3 class="feature-title text-3xl font-medium text-[#333] pt-[10px] uppercase tracking-[0.5px] m-0">
          {{ block.settings.title }}
        </h3>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .feature-item:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    height: 60%;
    width: 1px;
    background-color: #e0e0e0;
  }

  @media screen and (max-width: 991px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }

    .feature-item:nth-child(2n)::after {
      display: none;
    }
  }

  @media screen and (max-width: 767px) {
    .features-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .feature-item::after {
      display: none;
    }
  }
</style>
