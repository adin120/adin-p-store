{%- style -%}
  .split-section-{{ section.id }} {
    width: 100%;
    display: flex;
    margin: 0;
    padding: 0;
    background-color: {{ section.settings.section_bg_color }};
  }

  .split-section__image {
    width: 50%;
    height: auto;
    display: block;
  }

  .split-section__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .split-section__content-wrapper {
    width: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .split-section__content {
    max-width: 550px;
    padding: 40px;
    text-align: {{ section.settings.text_alignment }};
  }

  .split-section__title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: bold;
    margin-bottom: 20px;
    color: {{ section.settings.title_color }};
  }

  .split-section__button {
    display: inline-block;
    color: {{ section.settings.button_text_color }};
    background-color: {{ section.settings.button_bg_color }};
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 13px;
    font-weight: bold;
    letter-spacing: 0.15em;
    line-height: 23px;
    margin: 0px 12px 22px;
    position: relative;
    text-transform: uppercase;
  }

  .split-section__button::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    border-bottom: 2px solid {{ section.settings.button_underline_color }};
    transition: all 0.3s ease;
  }

  .split-section__button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    color: {{ section.settings.button_hover_text_color }};
    background-color: {{ section.settings.button_hover_bg_color }};
  }

  .split-section__button:hover::after {
    border-bottom-color: {{ section.settings.button_hover_underline_color }};
  }

  @media (max-width: 768px) {
    .split-section-{{ section.id }} {
      flex-direction: column;
    }
    .split-section__image,
    .split-section__content-wrapper {
      width: 100%;
    }
    .split-section__content {
      max-width: 100%;
      padding: 30px 20px;
    }
  }

  {% if section.settings.swap_layout %}
    .split-section-{{ section.id }} .split-section__image {
      order: 2;
    }
    .split-section-{{ section.id }} .split-section__content-wrapper {
      order: 1;
    }
  {% endif %}
{%- endstyle -%}

<div class="split-section-{{ section.id }}">
  <div class="split-section__image">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url: '1200x' }}" alt="{{ section.settings.image.alt | escape }}">
    {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>
  <div class="split-section__content-wrapper">
    <div class="split-section__content">
      {% if section.settings.title != blank %}
        <h2 class="split-section__title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="split-section__text">{{ section.settings.text }}</div>
      {% endif %}
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="split-section__button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

