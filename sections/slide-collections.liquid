{% schema %}
{
  "name": "Collections Slider",
  "settings": [],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collections Slider",
      "blocks": []
    }
  ]
}
{% endschema %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<section class="collections-slider-section">
  <div class="swiper collections-slider">
    <div class="swiper-wrapper collection-items-wrapper">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        {% if collection %}
          <div class="swiper-slide collection-item">
            <a href="{{ collection.url }}" class="collection-link">
              <div class="collection-image-wrapper">
                <img src="{{ collection.image | img_url: 'medium' }}" alt="{{ collection.title }}">
              </div>
              <p class="collection-title">{{ collection.title | upcase }}</p>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="swiper-button-prev hidden"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.collections-slider', {
      slidesPerView: 'auto',
      loop: false,
      initialSlide: 0,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      allowTouchMove: true,
      watchOverflow: true,
      breakpoints: {
        768: {
          slidesPerGroup: 4,
        },
      },
      on: {
        init: function () {
          checkScreenSize();
        },
        resize: function () {
          checkScreenSize();
        },
        slideChange: function () {
          let prevButton = document.querySelector('.swiper-button-prev');
          let nextButton = document.querySelector('.swiper-button-next');

          prevButton.classList.toggle('hidden', swiper.isBeginning);
          nextButton.classList.toggle('disabled', swiper.isEnd);
        },
      },
    });

    function checkScreenSize() {
      if (window.innerWidth < 768) {
        document.querySelector('.swiper-button-prev').style.display = 'none';
        document.querySelector('.swiper-button-next').style.display = 'none';
        document.querySelector('.collections-slider-section').style.maxWidth = '100%';
      } else {
        document.querySelector('.swiper-button-prev').style.display = 'flex';
        document.querySelector('.swiper-button-next').style.display = 'flex';
        document.querySelector('.collections-slider-section').style.maxWidth = '90%';
      }
    }

    window.addEventListener('resize', checkScreenSize);
  });
</script>

<style>
  .collections-slider-section {
    max-width: 100% !important;
    width: 100%;
    margin-top: 30px;
    padding: 20px 0;
    display: flex;
    justify-content: flex-end;
    transition: max-width 0.3s ease-in-out;
    position: relative;
  }

  .collections-slider .swiper-wrapper {
    gap: 10px;
    padding-right: 150px;
    padding-left: 150px;
    display: flex;
  }

  .collection-link {
    text-decoration: none;
    color: inherit;
  }

  @media (max-width: 768px) {
    .collections-slider .swiper-wrapper {
      gap: 16px !important;
    }

    .collections-slider .swiper-wrapper {
      padding-inline: 20px;
    }
  }

  @media (max-width: 768px) {
    .collections-slider-section {
      max-width: 100%;
      width: 100%;
      padding: 0;
      margin: 0 auto;
    }
  }

  .collections-slider .swiper-wrapper {
    gap: 10px;
    display: flex;
  }

  .collections-slider {
    overflow: hidden;
    position: relative;
  }

  .collection-item {
    max-width: 160px;
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
  }

  @media (max-width: 768px) {
    .collection-item {
      max-width: 120px !important;
      width: 100%;
    }
  }

  .collection-item:hover {
    transform: scale(1.03);
  }

  .collection-image-wrapper img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .collection-title {
    font-size: 14px;
    font-weight: bold;
    letter-spacing: 1px;
    margin-top: 0;
    padding-top: 0;
  }

  .swiper-button-prev,
  .swiper-button-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: 0.3s ease-in-out;
    display: block !important;
    z-index: 10;
  }

  .swiper-button-next {
    right: 40px;
  }

  .swiper-button-prev {
    left: 40px;
  }

  .swiper-button-prev {
    background: #fff;
  }

  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    background: #999 !important;
  }

  .swiper-button-prev:after,
  .swiper-rtl .swiper-button-next:after {
    content: 'prev';
    position: absolute;
    left: 27%;
    top: 20%;
    font-size: 23px;
    color: #000;
  }

  @media (max-width: 768px) {
    .collections-slider-section {
      max-width: 100%;
      width: 100%;
      padding: 0;
      margin-top: 30px;
    }

    .collection-title {
      font-size: 12px;
      font-weight: 600;
    }

    .swiper-button-prev,
    .swiper-button-next {
      display: none !important;
    }

    .collection-item {
      max-width: 140px;
    }
  }

  @media (max-width: 768px) {
    .swiper-button-next {
      right: 10px;
    }

    .swiper-button-prev {
      left: 10px;
    }
  }

  .swiper-button-next,
  .swiper-button-next {
    background: #fff;
  }

  .swiper-button-next:after,
  .swiper-rtl .swiper-button-prev:after {
    content: 'next';
    color: #000;
    font-size: 22px;
    left: 16px;
    top: 9px;
    position: absolute;
  }

  .swiper-button-prev.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .swiper-button-next.disabled {
    opacity: 0.5;
    pointer-events: none;
  }

  .swiper-button-prev:hover,
  .swiper-button-next:hover {
    background: black;
  }
</style>
